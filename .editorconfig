# Editor configuration, see https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_size = 2

[.clang-tidy]
indent_size = 2

[Makefile]
indent_style = tab

[*.m4]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
